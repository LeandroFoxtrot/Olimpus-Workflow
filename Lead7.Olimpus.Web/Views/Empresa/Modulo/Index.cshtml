    <table class="table table-striped responsive-utilities jambo_table bulk_action">
        <thead>
            <tr class="headings">
                <th class="column-title" style="width: 10%">ID </th>
                <th class="column-title">@MyResources.Modulo.NomeModulo </th>
                <th class="column-title no-link last" style="text-align: center; width: 30%">
                    <span class="nobr">@MyResources.Layout.Action</span>
                </th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model.Modulos)
                {
                    <tr class="even pointer">
                        <td class=" " style="vertical-align: middle">@item.Id</td>
                        <td class=" " style="vertical-align: middle">@item.Nome </td>
                        <td class=" last" style="text-align: center; vertical-align: middle">
                            @if (item.PodeExcluir)
                            {
                                <a href="#" onclick="javascript: excluirmodulo(@item.Id, @Model.Id); " title="@MyResources.Layout.Delete" class="btn btn-default btn-group-xs"><i class="fa fa-remove"></i> @MyResources.Layout.Delete</a>
                            }
                        </td>
                    </tr>
                }
                @foreach (var item in Model.ListaModulos)
                {
                    <tr class="even pointer">
                        <td class=" " style="vertical-align: middle">@item.Value</td>
                        <td class=" " style="vertical-align: middle">@item.Text</td>
                        <td class=" last" style="text-align: center; vertical-align: middle">
                            <a href="#" onclick="javascript: habilitarmodulo(@item.Value, @Model.Id);" title="@MyResources.Modulo.Habilitar" class="btn btn-default btn-group-xs"><i class="fa fa-plus-square"></i> @MyResources.Modulo.Habilitar</a>
                            <a href="#" onclick="javascript: registrarmodulo(@item.Value, @Model.Id);" title="@MyResources.Modulo.Registrar" class="btn btn-default btn-group-xs"><i class="fa fa-magic"></i> @MyResources.Modulo.Registrar</a>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
</div>


